<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:padding="10dp"

        >

    <TextView

        android:gravity="center"
        android:id="@+id/tv_goldle_number"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="01"
        android:textSize="13sp"
        />
        <ImageView
            android:id="@+id/iv_goldle_image"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginLeft="14dp"
            android:background="#88000000"
            android:padding="1dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"
            android:src="@mipmap/boy"
            android:layout_toRightOf="@id/tv_goldle_number"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/iv_goldle_image">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/tv_goldle_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="111111111111111111"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_goldle_number1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="01"
                    android:padding="3dp"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_goldle_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2222222222222"
                android:singleLine="true"
                android:textColor="#88000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tv_goldle_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333333"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tv_goldle_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4444444444"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>




        </LinearLayout>

            <Button
                android:id="@+id/btn_goldle_buy"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@mipmap/my_user_level_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="购买"
                android:textColor="#fff"
                android:textSize="16sp"
                />
</RelativeLayout>

    <include layout="@layout/divider_view" />
</LinearLayout>
