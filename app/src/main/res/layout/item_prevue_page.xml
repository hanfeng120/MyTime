<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/rl_prevue_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            >

            <ImageView
                android:id="@+id/iv_video_prevue_icon"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@color/gray_normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/iv_video_prevue_icon"
                android:layout_alignRight="@id/iv_video_prevue_icon"
                android:layout_margin="10dp"
                android:background="@mipmap/img_play" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 最后的巫师猎人 中文预告"
            android:textSize="18dp"
            android:layout_toRightOf="@id/rl_prevue_photo"
            />

        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textSize="16dp"
            android:layout_below="@id/tv_video_title"
            android:textColor="@color/gray_normal"
            android:layout_toRightOf="@id/rl_prevue_photo"
            android:text="迪塞尔化身不死英雄" />

    </RelativeLayout>

    <include layout="@layout/divider_view" />

</LinearLayout>
