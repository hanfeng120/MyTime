<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_list_item_ll_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/offset_pxtodx_24"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/offset_pxtodx_146"
            android:layout_height="@dimen/offset_pxtodx_219">

            <ImageView
                android:id="@+id/movie_list_item_iv_photo"
                android:layout_width="@dimen/offset_pxtodx_146"
                android:layout_height="@dimen/offset_pxtodx_219"
                android:padding="@dimen/offset_pxtodx_1"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default" />

            <ImageView
                android:id="@+id/movie_list_item_tag_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/low_new_tag"
                android:visibility="gone" />

            <TextView
                android:id="@+id/movie_cover_filter_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/movie_list_item_iv_photo"
                android:layout_marginBottom="@dimen/offset_pxtodx_50"
                android:gravity="center_horizontal"
                android:textColor="#777777"
                android:textSize="@dimen/font_size_pxtosp_20"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_pxtodx_35"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_list_item_moviename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/offset_pxtodx_12"
                    android:maxWidth="@dimen/offset_pxtodx_356"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_pxtosp_34" />

                <TextView
                    android:id="@+id/movie_list_item_score_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_movie_info_sorce_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_pxtosp_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/movie_list_item_desc_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_pxtodx_4"
                android:layout_marginLeft="@dimen/offset_pxtodx_35"
                android:layout_marginTop="@dimen/offset_pxtodx_4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie_list_item_desc_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/offset_pxtodx_5"
                    android:src="@mipmap/quot_film_on" />

                <TextView
                    android:id="@+id/movie_list_item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#FD8900"
                    android:textSize="@dimen/font_size_pxtosp_29" />

                <TextView
                    android:id="@+id/movie_list_item_movietype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_pxtodx_4"
                    android:layout_marginTop="@dimen/offset_pxtodx_4"
                    android:singleLine="true"
                    android:textColor="#777777"
                    android:textSize="@dimen/font_size_pxtosp_29"
                    android:visibility="visible" />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/offset_pxtodx_35"
                android:layout_marginTop="@dimen/offset_pxtodx_4">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/button_pay"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movie_list_item_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="@dimen/font_size_pxtosp_24" />

                    <TextView
                        android:id="@+id/movie_list_item_showdata"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="@dimen/font_size_pxtosp_24" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/offset_pxtodx_4"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/movie_list_item_tag_3d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/offset_pxtodx_6"
                            android:src="@mipmap/rectangle3d"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/movie_list_item_tag_imax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/offset_pxtodx_6"
                            android:src="@mipmap/rectangleimax"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/movie_list_item_tag_larget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/offset_pxtodx_6"
                            android:src="@mipmap/rectanglelarget"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_pay"
                    android:layout_width="@dimen/offset_pxtodx_169"
                    android:layout_height="@dimen/offset_pxtodx_66"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/bt_solid_orange_66"
                    android:focusable="false"
                    android:text="购票"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/offset_pxtodx_2"
        android:layout_marginLeft="@dimen/offset_pxtodx_24"
        android:scaleType="fitXY"
        android:src="@color/color_d8d8d8" />
</LinearLayout>