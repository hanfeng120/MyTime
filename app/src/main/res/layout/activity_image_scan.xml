<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.atguigu.mtime.activity.ImageScanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_imagescan_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="23/34"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/iv_imagescan_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/title_bar_share"
            android:scaleType="centerInside"
            />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/iv_imagescan_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:id="@+id/iv_imagescan_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_photodetail_download_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
