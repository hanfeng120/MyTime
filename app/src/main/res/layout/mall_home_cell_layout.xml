<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cell"
        android:layout_width="fill_parent"
        android:layout_height="225dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/cella"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/app_name"
                android:minWidth="225dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/cella_main_title"
                android:layout_width="156.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cella_sub_title"
                android:layout_width="168.0dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/cella_main_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff777777"
                android:textSize="13sp" />


        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#ffd8d8d8" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cellc1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:minHeight="112.5dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/cellc1_main_title"
                    android:layout_width="84.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cellc1_sub_title"
                    android:layout_width="64.0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cellc1_main_title"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#ff777777"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:id="@+id/subSecond_seperated"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#ffd8d8d8" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cellc2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:minHeight="112.5dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/cellc2_main_title"
                    android:layout_width="84.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cellc2_sub_title"
                    android:layout_width="64.0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cellc2_main_title"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#ff777777"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/cellb_seperated"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ffd8d8d8" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="112.5dp">

        <ImageView
            android:id="@+id/cellb"
            android:layout_width="fill_parent"
            android:layout_height="121dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cellb_main_title"
            android:layout_width="86.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cellb_sub_title"
            android:layout_width="116.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/cellb_main_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ff777777"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/cellb_flashsale_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/cellb_flashsale_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff777777"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/cellb_flashsale_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/flashsale"
                    android:text="00"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text=":"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/cellb_flashsale_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/flashsale"
                    android:text="00"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text=":"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/cellb_flashsale_mill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/flashsale"
                    android:text="00"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@mipmap/order_remind_seperated_region_background" />

</LinearLayout>