<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_movie_hot_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:singleLine="true"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tv_movie_hot_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
        android:textColor="#333"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_movie_hot_comment_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_movie_hot_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="bottom"
            android:paddingBottom="2dp"
            android:layout_toRightOf="@id/tv_movie_hot_comment_icon"
            android:textColor="@color/gray_normal"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_below="@id/tv_movie_hot_comment_user"
            android:layout_toRightOf="@id/tv_movie_hot_comment_icon"

            >

            <TextView
                android:id="@+id/tv_movie_hot_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="top"
                android:paddingTop="2dp"
                android:textColor="@color/gray_normal"
                />

            <TextView
                android:id="@+id/tv_movie_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color_movie_info_sorce_bg"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:layout_marginLeft="8dp"
                android:textColor="#fff" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb" />

</LinearLayout>