<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_discover_tab"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:background="@color/colorBlue"
        >

        <TextView
            android:id="@+id/tv_discover_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="新闻"
            android:textSize="18dp"
            android:gravity="center"
            android:enabled="false"
            android:textColor="@drawable/title_bar_discover_text_sel"
            />

        <TextView
            android:id="@+id/tv_discover_prevue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="预告片"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@drawable/title_bar_discover_text_sel"
            />

        <TextView
            android:id="@+id/tv_discover_charts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="排行榜"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@drawable/title_bar_discover_text_sel"
            />

        <TextView
            android:id="@+id/tv_discover_review"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="影评"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@drawable/title_bar_discover_text_sel"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_discover_indicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:background="@color/colorBlue"
        >

        <TextView
            android:id="@+id/view_discover_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginBottom="0.3dp"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>