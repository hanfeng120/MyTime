<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <HorizontalScrollView
            android:id="@+id/mall_home_topic_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/mall_home_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mall_home_topic_img1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/mall_home_topic_img2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/mall_home_topic_img3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/mall_home_topic_img4"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="30dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/mall_home_topic_img5"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="50dp"
                    android:padding="4dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/topic_title_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Avengers Assemble"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/topic_title_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="复仇者联盟系列"
        android:textSize="18sp" />

    <!--<com.mtime.mtmovie.widgets.ScrollGridview-->
    <com.atguigu.mtime.view.ScrollGridview
        android:id="@+id/mall_home_topic_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="3"
        />

    <RelativeLayout
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/more_product_bg">

        <TextView
            android:id="@+id/topic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="2dp"
            android:text="更多商品"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="6dp"
            android:src="@mipmap/right_mark" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/topic_seperate_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/order_remind_seperated_region_background" />
</LinearLayout>
