<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_list_item_ll_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/offset_pxtodx_3"
    android:background="@drawable/listview_item_bg_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_incoming"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/offset_pxtodx_66"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/offset_pxtodx_34"
        android:text="12月"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_pxtosp_27" />

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_pxtodx_34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_moviedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="18日"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_pxtosp_27" />

        <RelativeLayout
            android:layout_width="@dimen/offset_pxtodx_146"
            android:layout_height="@dimen/offset_pxtodx_219"
            android:layout_marginLeft="@dimen/offset_pxtodx_17">

            <ImageView
                android:id="@+id/movie_list_item_iv_photo"
                android:layout_width="@dimen/offset_pxtodx_146"
                android:layout_height="@dimen/offset_pxtodx_214"
                android:background="@drawable/image_border"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/offset_pxtodx_1"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_default" />

            <ImageView
                android:id="@+id/movie_list_item_tag_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/low_new_tag"
                android:visibility="gone" />

            <TextView
                android:id="@+id/movie_cover_filter_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/movie_list_item_iv_photo"
                android:layout_marginBottom="@dimen/offset_pxtodx_50"
                android:gravity="center_horizontal"
                android:textColor="#777777"
                android:textSize="@dimen/font_size_pxtosp_20"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/offset_pxtodx_34">

            <TextView
                android:id="@+id/item_moviename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_pxtodx_10"
                android:singleLine="true"
                android:text="sssss"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_pxtosp_32" />

            <TextView
                android:id="@+id/item_wantseen_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_moviename"
                android:layout_marginBottom="@dimen/offset_pxtodx_10"
                android:singleLine="true"
                android:text="dddddddd"
                android:textColor="#ff8600"
                android:textSize="@dimen/font_size_pxtosp_27" />

            <TextView
                android:id="@+id/item_movietype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_moviename"
                android:layout_marginBottom="@dimen/offset_pxtodx_10"
                android:layout_toRightOf="@+id/item_wantseen_num"
                android:singleLine="true"
                android:text="safdas"
                android:textColor="#777777"
                android:textSize="@dimen/font_size_pxtosp_27" />

            <TextView
                android:id="@+id/item_moviedirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_wantseen_num"
                android:layout_marginBottom="@dimen/offset_2dp"
                android:layout_marginRight="@dimen/offset_4dp"
                android:maxWidth="@dimen/hotmovie_name_max_260dp"
                android:singleLine="true"
                android:text="dafds"
                android:textColor="#777777"
                android:textSize="@dimen/font_size_pxtosp_27" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom">

                <Button
                    android:id="@+id/button_presell"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/offset_pxtodx_66"
                    android:layout_marginRight="@dimen/offset_pxtodx_16"
                    android:background="@mipmap/bt_solid_green_66"
                    android:focusable="false"
                    android:text="超前预售"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/offset_pxtodx_66"
                    android:layout_marginRight="@dimen/offset_pxtodx_16"
                    android:background="@mipmap/bt_line_green_66"
                    android:focusable="false"
                    android:text="上映提醒"
                    android:textColor="@color/color_movie_info_sorce_bg" />

                <Button
                    android:id="@+id/button_vedio"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/offset_pxtodx_66"
                    android:layout_toRightOf="@+id/button_presell"
                    android:background="@mipmap/bt_line_green_66"
                    android:focusable="false"
                    android:text="预告片"
                    android:textColor="@color/color_movie_info_sorce_bg" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/divider_line_long"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/offset_pxtodx_2"
        android:layout_marginLeft="@dimen/offset_pxtodx_34"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="#BBBBBB" />

    <ImageView
        android:id="@+id/divider_line_short"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/offset_pxtodx_2"
        android:layout_marginLeft="@dimen/offset_pxtodx_110"
        android:scaleType="fitXY"
        android:src="#ffd8d8d8"
        />
</LinearLayout>