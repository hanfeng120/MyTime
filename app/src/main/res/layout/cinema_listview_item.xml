<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cinema_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="博纳通州土桥店"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cinema_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="内容111111111111111111"
                android:textColor="#88000000"
                android:textSize="15sp"
                android:layout_marginTop="3dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:id="@+id/iv_cinema_item_has3d"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/cinemalist_3d"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/iv_cinema_item_hasvip"
                    android:layout_toRightOf="@id/iv_cinema_item_has3d"
                    android:layout_marginLeft="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_small_vip"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_cinema_item_haswifi"
                    android:layout_toRightOf="@id/iv_cinema_item_hasvip"
                    android:layout_marginLeft="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_s_wififree"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_cinema_item_hasmax"
                    android:layout_toRightOf="@id/iv_cinema_item_haswifi"
                    android:layout_marginLeft="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/cinemalist_imax"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/iv_cinema_item_rest"
                    android:layout_toRightOf="@id/iv_cinema_item_hasmax"
                    android:layout_marginLeft="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/cinemalist_parking"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:id="@+id/tv_cinema_item_meter"
                       android:layout_marginTop="40dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="21km"
                       android:textColor="#0075c4"
                       android:textSize="16sp"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:id="@+id/tv_cinema_item_price"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="5dp"
                       android:layout_width="wrap_content"
                         android:textColor="#f08100"
                       android:layout_height="wrap_content"
                       android:text="20元"
                       android:textSize="23sp"/>
               </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/divider_view" />
</LinearLayout>
