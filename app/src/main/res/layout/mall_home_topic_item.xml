<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topic_list_img"
        android:layout_width="101.5dp"
        android:background="@mipmap/img_default_45x45"
        android:layout_height="101.5dp" />
    <TextView
        android:id="@+id/topic_list_title"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff333333"
        android:lines="2"
        android:textSize="12sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/topic_list_price"
        android:textSize="15sp"
        android:text="111.1"
        android:textColor="@color/color_d8d8d8"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
</LinearLayout>
