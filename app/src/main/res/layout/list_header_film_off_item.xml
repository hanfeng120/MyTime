<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:minWidth="320dp"
    android:layout_height="wrap_content"
    android:paddingRight="12dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_incoming"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/film_of_list_header_data_height"
            android:layout_marginLeft="@dimen/offset_pxtodx_34"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/offset_pxtodx_11"
                android:text="9月19日"
                android:textColor="#777777"
                android:textSize="@dimen/font_size_pxtosp_30" />

            <ImageView
                android:id="@+id/item_h_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/offset_pxtodx_34"
            android:layout_marginLeft="@dimen/offset_pxtodx_34"
            android:layout_marginRight="@dimen/offset_pxtodx_34"
            android:layout_marginTop="@dimen/offset_pxtodx_20"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/offset_pxtodx_191"
                android:layout_height="@dimen/offset_pxtodx_287"
                android:layout_marginRight="@dimen/offset_pxtodx_34">

                <ImageView
                    android:id="@+id/movie_list_item_iv_photo"
                    android:layout_width="@dimen/offset_pxtodx_191"
                    android:layout_height="@dimen/offset_pxtodx_287"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_default" />

                <ImageView
                    android:id="@+id/movie_list_item_tag_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/low_new_tag"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/movie_cover_filter_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/movie_list_item_iv_photo"
                    android:layout_marginBottom="@dimen/offset_pxtodx_56"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:textSize="@dimen/font_size_pxtosp_26"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/offset_pxtodx_287"
                android:minWidth="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_moviename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_pxtodx_20"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_pxtosp_32" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_pxtodx_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_wantseen_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff8600"
                        android:textSize="@dimen/font_size_pxtosp_27" />

                    <TextView
                        android:id="@+id/item_movietype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#777777"
                        android:textSize="@dimen/font_size_pxtosp_27" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_moviedirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_pxtodx_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#777777"
                    android:textSize="@dimen/font_size_pxtosp_27" />

                <TextView
                    android:id="@+id/item_movieactor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_pxtodx_4"
                    android:layout_marginRight="@dimen/offset_pxtodx_8"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#777777"
                    android:textSize="@dimen/font_size_pxtosp_27" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginTop="@dimen/offset_pxtodx_4"
                    android:gravity="bottom|center|left">

                    <Button
                        android:id="@+id/button_vedio"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/offset_pxtodx_66"
                        android:layout_toRightOf="@+id/button_presell"
                        android:background="@mipmap/bt_line_green_66"
                        android:focusable="false"
                        android:text="预告片"
                        android:textColor="@color/color_movie_info_sorce_bg" />

                    <Button
                        android:id="@+id/button_presell"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/offset_pxtodx_66"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/offset_pxtodx_16"
                        android:background="@mipmap/bt_solid_green_66"
                        android:focusable="false"
                        android:text="超前预售"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/offset_pxtodx_66"
                        android:layout_toLeftOf="@+id/button_vedio"
                        android:background="@mipmap/bt_line_green_66"
                        android:focusable="false"
                        android:text="@string/str_filmactivity_button_remind"
                        android:textColor="@color/color_movie_info_sorce_bg" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_v_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@id/ll_incoming"
        android:layout_marginBottom="12dp"
        android:scaleType="fitXY"
        android:background="#f00"
        android:src="@mipmap/line"
        />
</LinearLayout>