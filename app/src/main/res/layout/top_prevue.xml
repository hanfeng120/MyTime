<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_top_prevue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/tv_discover_prevue_top_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_discover_prevue_top_bg"
            android:background="@drawable/find_titlepic_text_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_discover_prevue_top_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="视频的标题"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="6dp"
                android:background="@mipmap/img_play" />

        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fl_loading_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/loading_failed"
        android:visibility="gone" />

</LinearLayout>