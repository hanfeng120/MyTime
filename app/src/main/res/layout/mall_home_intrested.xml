<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffebebeb"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffebebeb"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#ffc3c3c3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="#ffebebeb"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_recommended_daily_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7.5dp"
                android:text="你可能感兴趣的"
                android:textColor="#ff999999"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <com.atguigu.mtime.view.ScrollGridview
        android:id="@+id/interest_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:horizontalSpacing="10.0dip"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10.0dip" />

    <TextView
        android:id="@+id/product_nomore"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="貌似没有更多了"
        android:textColor="#ff999999"
        android:textSize="12dp" />
</LinearLayout>
