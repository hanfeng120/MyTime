<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/home_movie_score_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_movie_info_sorce_bg"
            android:gravity="center"
            android:singleLine="true"
            android:padding="1dp"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" >

        <ImageView
            android:id="@+id/home_line_green"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:paddingTop="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_rectangle" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_line_green"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_onecomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@mipmap/quot"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="#fd8900"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@color/color_d8d8d8"
                android:contentDescription="@string/app_name"
                android:paddingTop="114.0dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/home_hotmovie_num_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/home_hotmovie_num"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textColor="#333"
                        android:textSize="20dp"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/home_movie_hot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="2.0dip"
                            android:text="正在热映"
                            android:textColor="#777"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/home_movie_hot"
                            android:contentDescription="@string/app_name"
                            android:paddingLeft="4.0dip"
                            android:src="@mipmap/home_movie_right_mark" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="1.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/color_d8d8d8"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:id="@+id/home_comingmovie_num_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/comingmoive_num"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textColor="#333"
                        android:textSize="20dp"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/home_movie_coming_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="2.0dip"
                            android:text="即将上映"
                            android:textColor="#777"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/home_movie_coming_text"
                            android:contentDescription="@string/app_name"
                            android:paddingLeft="4.0dip"
                            android:src="@mipmap/home_movie_right_mark" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="1.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/color_d8d8d8"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:id="@+id/home_incoming_num_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/home_incoming_num"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textColor="#333"
                        android:textSize="20dp"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/home_findmovie_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="2.0dip"
                            android:text="找影院"
                            android:textColor="#777"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/home_findmovie_text"
                            android:contentDescription="@string/app_name"
                            android:paddingLeft="4.0dip"
                            android:src="@mipmap/home_movie_right_mark" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/home_but_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/home_but_pay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/home_button_buyticket2"
                android:text="选座购票"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/home_but_movieinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/home_button_movie"
                android:text="查影讯"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/adv_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/order_remind_seperated_region_background" />

</LinearLayout>